
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Thông tin cá nhân</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center">
                                <img src="~/images1/user-laptop-512.png" class="img-circle img-responsive"/>
                            </div>
                            <div class=" col-md-9 col-lg-5 ">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Last Name: </td>
                                            <td>@ViewData["Name"]</td>@*Lấy dữ liệu dùng ViewData*@
                                        </tr>

                                        <tr>
                                            <td>UserName: </td>
                                            <td>@ViewData["UserName"]</td>
                                            @*Lấy dữ liệu dùng ViewData*@
                                        </tr>
                                        <tr>
                                        <tr>
                                            <td>Password:</td>
                                            <td> @ViewData["Password"]</td>
                                            @*Lấy dữ liệu dùng ViewData*@
                                        </tr>
                                        <tr>
                                            <td>Email :</td>
                                            <td><a href="#"></a>@ViewData["Email"]</td>
                                            @*Lấy dữ liệu dùng ViewData*@
                                        </tr>
                                        <tr>
                                            <td>Phone: </td>
                                            <td>@ViewData["Phone"]</td>
                                            @*Lấy dữ liệu dùng ViewData*@
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" style="text-align:center">
                        <a asp-action="Edit" asp-route-id="@ViewData["Id"]" class="btn btn-primary">Edit Info</a>

                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>