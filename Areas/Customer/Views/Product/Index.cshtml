@model List<TestCase.Models.Products>
@{
    ViewData["Title"] = "Product";
    //Layout = null;
}
<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-2" style="padding-right: 20px">
            <div class="card mb-4" style="width: 300px">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:300px;" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313"><b>$@product.Price</b>/@product.ProductTypes.Name</label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-success pull-right btn-outline-info" asp-route-id="@product.Id"> View Details</a>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
