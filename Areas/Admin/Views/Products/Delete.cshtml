@model TestCase.Models.ViewModel.ProductsViewModel
@using TestCase.Extensions


<br />
<h2 class="text-info">Delete Product</h2>
<style>
    .p-4.border.rounded {
        font-size: 18px;
        color: black;
    }
</style>
<form method="post" style="background-color:#5e7edcab">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name">Name:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price">Price:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductTypes">ProductTypes:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShadeColor">ShadeColor:</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ShadeColor" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available">Available:</label>
                </div>
                <div class="col-8">
                    <input type="checkbox" readonly class="form-control" asp-for="Products.Available" />
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>


        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

