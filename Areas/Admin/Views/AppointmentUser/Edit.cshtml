

@model TestCase.Models.Appointments
@{
    ViewData["Title"] = "Edit";
}
<style>
    .p-5.border.rounded {
        font-size: 18px;
        color: black;
    }
</style>
<br />
<h2 class="text-info">Edit Admin User</h2>

<form method="post" asp-action="Edit" style="background-color:#5e7edcab">
    <div class="p-5 border rounded">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AppointmentDate">AppointmentDate:</label>
            </div>
            <div class="col-5">
                <input asp-for="AppointmentDate" class="form-control" />
            </div>
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerName">CustomerName:</label>
            </div>
            <div class="col-5">
                <input asp-for="CustomerName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerPhoneNumber">CustomerPhoneNumber:</label>
            </div>
            <div class="col-5">
                <input asp-for="CustomerPhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CustomerEmail">CustomerEmail:</label>
            </div>
            <div class="col-5">
                <input asp-for="CustomerEmail" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="isConfirmed">isConfirmed:</label>
            </div>
            <div class="col-5">
                <input asp-for="isConfirmed" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

